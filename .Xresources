!{{{ URXVT
! tab keyboard shortcuts :ctrl place to where, shift switch tab
! General
URxvt*inputMethod:ibus
URxvt.depth:             24
URxvt.termName:          rxvt-unicode-256color
URxvt.loginShell:        true
URxvt.scrollBar:         false
URxvt.secondaryScroll:   true
URxvt.saveLines:         65535
URxvt.cursorBlink:       false
!URxvt.cursorUnderline:  true
URxvt.urgentOnBell:      true
!URxvt.override-redirect:false
!URxvt.borderLess:       false
!URxvt.internalBorder:       0
!URxvt.externalBorder:       0
!
! Extensions
URxvt.perl-lib:            /usr/lib/urxvt/perl/
URxvt.perl-ext:	           default,matcher,searchable-scrollback,tabbed,clipboard,selection-to-clipboard,url-select,keyboard-select
URxvt.keysym.M-u:          perl:url-select:select_next
URxvt.keysym.M-Escape:     perl:keyboard-select:activate
URxvt.keysym.M-s:          perl:keyboard-select:search
URxvt.url-select.launcher: /usr/bin/min
!URxvt.iconFile:           utilities-terminal.svg
URxvt.matcher.button:      1
! Catch ugly URLs
URxvt.cutchars:            '"'()*<>[]{|}
!
! Appearance
URxvt*font:  xft:DejaVu Sans Mono:size=12,xft:WenQuanYi Micro Hei Mono:size=12:minispace=true
URxvt*boldFont:  xft:WenQuanYi Micro Hei Mono:size=12:minispace=true,xft:DejaVu Sans Mono for Powerline:size=12
URxvt*letterSpace: -1

! Cursor
URxvt.cursorColor: #DCDCCC
! URLs
URxvt.colorUL: #c5f779
URxvt.underlineColor: #c5f779

! Pseudo Transparency
!URxvt.shading:    10
!URxvt.transparent:true
!
! Zenburn color-scheme
URxvt.background:  #3f3f3f
URxvt.foreground:  #dcdccc
! black + red
!URxvt.color0:     #3f3f3f
URxvt.color0:      #1E2320
URxvt.color1:      #705050
! green + yellow
URxvt.color2:      #60b48a
URxvt.color3:      #dfaf8f
! blue + purple
URxvt.color4:      #506070
URxvt.color5:      #dc8cc3
! cyan + white
URxvt.color6:      #8cd0d3
URxvt.color7:      #dcdccc
! bright-black + bright-red
URxvt.color8:      #709080
!URxvt.color9:      #dca3a3
URxvt.color9:      #cc9393
! bright-green + bright-yellow
!URxvt.color10:     #c3bf9f
URxvt.color10:     #7f9f7f
URxvt.color11:     #f0dfaf
! bright-blue + bright-purple
URxvt.color12:     #94bff3
URxvt.color13:     #ec93d3
! bright-cyan + bright-white
URxvt.color14:     #93e0e3
URxvt.color15:     #ffffff
!}}}

